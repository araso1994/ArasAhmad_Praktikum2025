@model WuppertalMapMvc.Models.Stop

@{
    ViewData["Title"] = "Haltestelle löschen";
}

<h2>Haltestelle löschen</h2>

<div class="alert alert-warning">
    Möchtest du die Haltestelle <strong>@Model.Name</strong> wirklich löschen?
</div>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Ja, löschen</button>
    <a href="/Stop" class="btn btn-secondary">Abbrechen</a>
</form>
