<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - LernPfad</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Lernpfad 🚀</a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Lernpfad" asp-action="Index">📚 Bibliothek</a>
                    </li>

                    @if (User.Identity?.IsAuthenticated ?? false)
    {
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Account/Manage/Index">👤 Profil (@User.Identity.Name)</a>
                    </li>
                    <li class="nav-item">
                        <form asp-page="/Account/Logout" method="post" class="d-inline">
                            <button type="submit" class="nav-link btn btn-link text-white">🚪 Abmelden</button>
                        </form>
                    </li>
    }
    else
    {
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Account/Login">🔑 Anmelden</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Account/Register">📝 Registrieren</a>
                    </li>
    }
                </ul>

            </div>
        </div>
    </nav>

    <main class="container py-4">
        @RenderBody()
    </main>

    <footer class="bg-dark text-white text-center py-3 mt-auto">
        <small>Erstellt im Rahmen eines Lernprojekts 🧠</small>
    </footer>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>
