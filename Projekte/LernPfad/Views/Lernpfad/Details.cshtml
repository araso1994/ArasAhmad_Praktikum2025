@model LernPfad.Models.Lernpfad

@{
    ViewData["Title"] = "Lernpfad-Vorschau";
}

<h2>@Model.Titel</h2>
<h2>@Model.Titel</h2>

@if (!string.IsNullOrEmpty(Model.BildPfad))
{
    <div class="mb-3">
        <img src="@Model.BildPfad" alt="Vorschaubild" style="max-width: 300px;" />
    </div>
}


<p><strong>Autor:</strong> @Model.AutorId</p>

<hr />

<div>
    <h4>Beschreibung</h4>
    <div class="border p-3 mb-4" style="background-color: #f8f9fa;">
        @Html.Raw(Model.Beschreibung)
    </div>
</div>

@if (Model.Schritte != null && Model.Schritte.Any())
{
    <h4>Lernschritte</h4>
    <div class="timeline">
        @foreach (var schritt in Model.Schritte.OrderBy(s => s.Reihenfolge))
        {
            <div class="card mb-3">
                <div class="card-header fw-bold">📘 @schritt.Titel</div>
                <div class="card-body">
                    @Html.Raw(schritt.Inhalt)
                </div>
            </div>
        }
    </div>
}
else
{
    <p>Keine Lernschritte vorhanden.</p>
}
