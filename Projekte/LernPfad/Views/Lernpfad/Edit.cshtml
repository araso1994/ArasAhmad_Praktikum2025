@model LernPfad.Models.Lernpfad

@{
    ViewData["Title"] = "Lernpfad bearbeiten";
}

<h2>Lernpfad bearbeiten</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Titel"></label>
        <input asp-for="Titel" class="form-control" />
        <span asp-validation-for="Titel" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label asp-for="Beschreibung"></label>
        <textarea asp-for="Beschreibung" class="form-control"></textarea>
        <span asp-validation-for="Beschreibung" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label asp-for="AutorId"></label>
        <input asp-for="AutorId" class="form-control" />
        <span asp-validation-for="AutorId" class="text-danger"></span>
    </div>

    <div class="form-group mt-4">
        <label for="NeuesBild">Vorschaubild ersetzen (optional)</label>
        <input type="file" name="NeuesBild" class="form-control" accept="image/*" />
    </div>

    @if (!string.IsNullOrEmpty(Model.BildPfad))
    {
        <div class="mt-3">
            <p>Aktuelles Bild:</p>
            <img src="@Model.BildPfad" style="max-width: 300px; border: 1px solid #ccc;" />
        </div>
    }

    <button type="submit" class="btn btn-primary mt-4">Speichern</button>
    <a asp-action="Index" class="btn btn-secondary mt-4">Abbrechen</a>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
